@page
@model SummArts.Pages.Summaries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Article Summary</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].SummaryText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].SourceUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary[0].UpdatedDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Summary) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummaryText)
            </td>
            <td>
                <a href="@item.SourceUrl" target="_blank">@item.SourceUrl</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
